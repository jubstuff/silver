{% macro heading(text, tag = 'h2', type = 'heading2', attrs = {
    'classes': 'text-black',
    'attributes': ''
}) %}

    {% set defaultClasses = 'text-3xl leading-tight font-bold mb-6 lg:text-4xl' %}

    {% if type == 'heading1' %}
        {% set sizeClasses = 'text-5xl font-bold mb-6 leading-none lg:text-6xl' %}
    {% elif type == 'heading2' %}
        {% set sizeClasses = defaultClasses %}
    {% elif type == 'heading3' %}
        {% set sizeClasses = 'uppercase text-2xl leading-tight xl:text-3xl font-light mb-6' %}
    {% elif type == 'heading4' %}
        {% set sizeClasses = 'font-bold text-xl leading-tight mb-6' %}
    {% elif type == 'subtitle' %}
        {% set sizeClasses = 'text-2xl xl:text-3xl leading-tight mb-8' %}
    {% else %}
        {% set sizeClasses = defaultClasses %}
    {% endif %}

    <{{ tag }} class="{{ sizeClasses }} {{ attrs.classes }}" {{ attrs.attributes }}>{{ text | safe }}</{{ tag }}>
{% endmacro %}

{% macro link(label, url) %}
    <a class="underline text-blue-700" href="{{ url }}">{{ label | safe }}</a>
{% endmacro %}

{% macro p(text) %}
    <p class="text-lg mb-6">
        {{ text | safe }}
    </p>
{% endmacro %}

{% macro image(imgSrc, caption = '', alt = '') %}
    <div class="image image--small">
        <figure>
            <img class="mb-1" src="{{ imgSrc }}" alt="{{ alt }}" width="100%">
            {%- if caption -%}
                <figcaption class="text-base text-gray-800">{{ caption | safe }}</figcaption>
            {%- endif -%}
        </figure>
    </div>
{% endmacro %}

{% macro hero(title, subtitle) %}
    <div class="heading bg-blue-100 px-5 py-12">
        <div class="heading-measure">
            <h1 class="heading-title text-4xl font-bold leading-tight mb-5">{{ title | safe }}</h1>
            <p class="heading-text text-2xl leading-tight">{{ subtitle | safe }}</p>
        </div>
    </div>
{% endmacro %}