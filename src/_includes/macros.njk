{% macro link(label, url) %}
    <a class="underline text-blue-700" href="{{ url }}">{{ label | safe }}</a>
{% endmacro %}

{% macro p(text) %}
    <p class="text-lg mb-6">
        {{ text | safe }}
    </p>
{% endmacro %}

{% macro image(imgSrc, caption = '', alt = '') %}
    <div class="image image--small">
        <figure>
            <img class="mb-1" src="{{ imgSrc }}" alt="{{ alt }}" width="100%">
            {%- if caption -%}
                <figcaption class="text-base text-gray-800">{{ caption | safe }}</figcaption>
            {%- endif -%}
        </figure>
    </div>
{% endmacro %}

{% macro hero(title, subtitle) %}
    <div class="heading bg-blue-100 px-5 py-12">
        <div class="heading-measure">
            <h1 class="heading-title text-4xl font-bold leading-tight mb-5 md:text-6xl">{{ title | safe }}</h1>
            {%- if subtitle -%}
                <p class="heading-text text-2xl leading-tight">{{ subtitle | safe }}</p>
            {%- endif -%}
        </div>
    </div>
{% endmacro %}